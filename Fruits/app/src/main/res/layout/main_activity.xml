<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/scroll" android:layout_marginBottom="75dp"
            android:fillViewport="false">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical" android:id="@+id/linear_in_scroll"
        />
    </ScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp" android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp" android:gravity="center_horizontal">
        <Button
                android:text="показать заявку"
                android:layout_height="match_parent" android:id="@+id/button_empty"
                android:layout_width="match_parent" android:layout_weight="1"
                android:background="@color/color_layout_btns" android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"/>
        <Button
                android:text="Отправить"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/btn_send"
                android:layout_weight="1" android:background="@color/color_layout_btns"
                android:layout_marginStart="4dp" android:layout_marginEnd="4dp"/>
    </LinearLayout>
</RelativeLayout>