<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
            android:layout_width="379dp"
            android:layout_height="546dp" android:id="@+id/scroll" android:layout_marginBottom="12dp"
            android:fillViewport="false" android:layout_marginTop="32dp" android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" android:layout_alignParentTop="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentEnd="true" android:layout_above="@+id/et_message">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical" android:id="@+id/linear_in_scroll"
        />
    </ScrollView>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp" android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
            android:layout_alignParentStart="true" android:layout_marginStart="0dp" android:gravity="center_horizontal"
            android:id="@+id/horizontal_layout">
        <Button
                android:text="показать заявку"
                android:layout_height="match_parent" android:id="@+id/btn_empty"
                android:layout_width="match_parent" android:layout_weight="1"
                android:background="@color/color_layout_btns" android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"/>
        <Button
                android:text="+ текст"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_weight="1.4"
                android:background="@color/color_layout_btns" android:id="@+id/btn_text"/>
        <Button
                android:text="Отправить"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/btn_send"
                android:layout_weight="1" android:background="@color/color_layout_btns"
                android:layout_marginStart="16dp" android:layout_marginEnd="16dp"/>
    </LinearLayout>
    <EditText
            android:text=""
            android:hint="введите дополнение к заявке"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/et_message"
            android:layout_alignParentEnd="true" android:layout_marginEnd="16dp" android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" android:textAlignment="center" android:visibility="invisible"
            android:layout_alignParentBottom="true" android:layout_marginBottom="78dp"/>
</RelativeLayout>