<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/scroll" android:layout_marginBottom="75dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/linear_in_scroll"/>
    </ScrollView>
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button" android:layout_alignParentBottom="true"
            android:layout_marginBottom="17dp" android:layout_alignParentEnd="true" android:layout_marginEnd="38dp"/>
    <Button
            android:text="add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btn_add" android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp" android:layout_alignParentStart="true"
            android:layout_marginStart="26dp"/>
</RelativeLayout>