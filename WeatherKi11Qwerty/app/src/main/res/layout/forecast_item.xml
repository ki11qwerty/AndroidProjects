<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/item_date_tv" android:layout_weight="1"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent" app:srcCompat="@color/colorPrimary" android:id="@+id/item_image"
            android:layout_weight="1"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/item_temp" android:layout_weight="1"/>
</LinearLayout>