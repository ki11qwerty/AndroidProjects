<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lesson8_r_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLesson7">

    <LinearLayout
        android:id="@+id/lesson8_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/lesson8_webview_edittext"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="введите запрос"/>

        <Button
            android:id="@+id/lesson8_webview_search"
            style="@android:style/Widget.Button.Small"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorOfButtonLesson7"
            android:text="search" />

        <WebView
            android:id="@+id/lesson8_webview_google"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </WebView>

    </LinearLayout>

</RelativeLayout>