<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLesson6">

    <Button
        android:id="@+id/button_lesson6_prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="32dp"
        android:background="@color/colorOfButtonLesson6"
        android:text="@string/previous_button" />

    <TextView
        android:id="@+id/tvLesoon6_intent"
        android:layout_width="190dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="27dp"
        android:layout_marginTop="68dp"
        android:background="@color/colorWhite"
        android:text="TextView"
        android:textAlignment="center" />

    <Button
        android:id="@+id/lesson6_button_new_activity"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvLesoon6_intent"
        android:layout_marginStart="67dp"
        android:background="@color/colorOfButtonLesson6"
        android:padding="10dp"
        android:text="Отправить" />

    <TextView
        android:id="@+id/textViewInfo"
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvLesoon6_intent"
        android:layout_marginTop="15dp"
        android:text="введите текст который следует отправить в новое Activity и нажмите кнопку"
        android:textSize="14sp" />

</RelativeLayout>
